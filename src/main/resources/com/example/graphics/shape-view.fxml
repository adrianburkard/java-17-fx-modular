<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.graphics.ShapeViewController"
      alignment="CENTER" spacing="20">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox alignment="CENTER" spacing="20">
        <HBox alignment="CENTER" spacing="20">
            <Label text="Width" />
            <TextField fx:id="inputFieldWidth" />
        </HBox>
        <HBox alignment="CENTER" spacing="20">
            <Label text="Height" />
            <TextField fx:id="inputFieldHeight" />
        </HBox>
    </VBox>

    <VBox alignment="CENTER" spacing="20">
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="computeButton" onAction="#handleComputeButton" text="compute"/>
        </HBox>
    </VBox>

    <VBox alignment="CENTER" spacing="20">
        <HBox spacing="20" alignment="CENTER">
            <Label text="Circumference" />
            <Label fx:id="circumferenceTextField" />
        </HBox>
        <HBox spacing="20" alignment="CENTER">
            <Label text="Area" />
            <Label fx:id="areaTextField"  />
        </HBox>
    </VBox>

</VBox>
